{
  "compilerOptions": {
     "lib": [
        "es5",
        "es6"
     ],
     "baseUrl": ".",
     "paths": {
       "@/*": [
         "./src/*"
       ],
       "@data" : [
         "./data"
       ]
     },
     "emitDecoratorMetadata" : true,
     "typeRoots": ["./node_modules/@types"], 
     "types": ["node"],
     "target": "es5",
     "module": "commonjs",
     "moduleResolution": "node",
     "outDir": "./build",
     "experimentalDecorators": true,
     "sourceMap": true,
     "resolveJsonModule" : true,
     "esModuleInterop": true
  }
}